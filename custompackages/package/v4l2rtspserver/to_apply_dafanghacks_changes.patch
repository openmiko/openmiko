+        }
+        if( header->extra_format_bytes > 0 ) {
+                if( 1 != fwrite( &(header->extra_format_bytes), sizeof(header->extra_format_bytes), 1, fp ) ) {
+                        MYLOG_ERROR("Could not write data to file");
