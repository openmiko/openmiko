+static inline void filter_init( struct fir_s * filter, const fract16 * coeff )
+{
+    int i;
+    filter->coeff = coeff;
+    filter->pos = 0;
+    for(i=0; i<2*FILTER_LEN; i++)
+        filter->delay[i] = 0;
+    return;
+}
