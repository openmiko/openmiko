+            }
+            IMP_Encoder_SetChnAttrRcMode(0, &attr);
+            if (ret < 0) {
+                LOG_S(INFO) << "Unable to change the bitrate";
+            }
+
+        }
+
+        if ((currentConfig.frmRateConfig[0] != newConfig->frmRateConfig[0]) || (currentConfig.frmRateConfig[1] != newConfig->frmRateConfig[1])) {
