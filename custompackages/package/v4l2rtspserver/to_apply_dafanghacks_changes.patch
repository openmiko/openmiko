+        if( 1 != fwrite( &(header->type), sizeof(header->type), 1, fp ) ) {
+                MYLOG_ERROR("Could not write data to file");
+                return(-1);
+        }
+        if( 1 != fwrite( &(header->channels), sizeof(header->channels), 1, fp ) ) {
