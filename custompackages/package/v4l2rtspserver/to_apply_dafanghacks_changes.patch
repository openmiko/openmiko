+static void exec_command(const char *command, char param[4][2])
+{
+     if (file_exist(command))
+     {
+      if (param == NULL) {
+         LOG_S(INFO) << "Will execute command " << command;
+         int retVal =  system(command);
+         LOG_S(INFO) << "Execute " << command << " returned:" << retVal;
